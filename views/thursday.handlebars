<div class="row">
	<div class="large-12 columns">
		<div class="panel">
			<h3>Rankings</h3>
			<div ng-repeat="(league, teams) in leagues">
				<h4 ng-bind="league"></h4>
				<div ng-repeat="team in teams">
				  	<span ng-bind="team.name"></span> (<span ng-bind="team.wins"></span> - <span ng-bind="team.loses"></span>)
				</div>
			</div>
		</div>
	</div>
</div>	

{{#if games}}
{{#each games}}
<div class="row">
	<div class="large-12 columns">
		<div class="panel">
			<h3>{{Date}}</h3>
			<div class="row">
				{{#each Games}}
				<div class="large-8 small-8 columns">
						{{this.[0]}} @ {{this.[1]}}
						{{#if this.[3]}}-&nbsp;<b>({{this.[3]}} to {{this.[4]}}</b>){{/if}} 
				</div>
				<div class="large-4 small-4 columns">
					<a href="#" data-reveal-id="scoreModal{{@../index}}{{@index}}">Submit Score</a>
					<div id="scoreModal{{@../index}}{{@index}}" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
					  	<h2 id="modalTitle" style="color: #000000; !important">Submit Score</h2>
						<form>
					  	<div class="row">
					  		<div class="large-6 columns">
				  			    <label><b>{{this.[0]}}</b>
							        <input type="text" name="homeScore" placeholder="Home Score" ng-model="homeScore"/>
  								</label>
					  		</div>
					  		<div class="large-6 columns">
				  			    <label><b>{{this.[1]}}</b>
							        <input type="text" name="awayScore" placeholder="Away Score" ng-model="awayScore"/>
  								</label>
					  		</div>
					  	</div>
					  	<div class="row">
					  		<div class="large-12 columns">
							  	<a href="#" class="button right" ng-click="submitScore('Thursday', 'scoreModal{{@../index}}{{@index}}', '{{this.[0]}}', '{{this.[1]}}')">Submit</a>
							</div>
						</div>
						</form>
					  	<a class="close-reveal-modal" aria-label="Close">&#215;</a>
					</div>
				</div>
		        {{/each}}  	
			</div>
		</div>
	</div>
</div>	
{{/each}}
{{/if}} 


