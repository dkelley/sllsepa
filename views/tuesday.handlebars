<div class="row">
	<div class="large-12 columns">
		<div class="panel">
			<h3>Rankings</h3>
			<div ng-repeat="(league, teams) in leagues">
				<h4 ng-bind="league"></h4>
				<div ng-repeat="team in teams">
				  	<span ng-bind="team.name"></span> (<span ng-bind="team.wins"></span> - <span ng-bind="team.loses"></span>)
