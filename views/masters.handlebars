<div class="row">
	<div class="large-12 columns">
		<h1>Masters - Thursday Night League</h1>
	</div>
</div>    

{{#if teams}}
<div class="row">
	<div class="large-12 columns">
		<div class="panel">
			<h3>Rankings (&amp; Team Contacts)</h3>
				<ol class="accordion" data-accordion>
				  {{#each teams}}
				  <li class="accordion-navigation">
				    <a href="#panel{{@index}}">{{this.name}} ({{this.wins}}-{{this.loses}})</a>
				    <div id="panel{{@index}}" class="content">
				    	<b>Contact:&nbsp;</b>{{#each this.contacts}}<a href="mailto:{{this.email}}">{{this.name}}</a>,{{/each}}<br/>
				    	<b>Field:&nbsp;</b>{{{this.field}}}
				    </div>
				  </li>
				  {{/each}}
				 </ol>
		</div>
	</div>
</div>	
{{/if}} 

{{#if games}}
{{#each games}}
<div class="row">
	<div class="large-12 columns">
		<div class="panel">
			<h3>{{Date}}</h3>
			<div class="row">
				{{#each Games}}
				<div class="large-10 small-10 columns">
						{{this.[0]}} v {{this.[1]}} @ {{this.[2]}} 
						{{#if this.[3]}}<br/>({{this.[3]}} to {{this.[4]}}){{/if}} 
				</div>
				<div class="large-2 small-2 columns">
					<!-- nothing for now -->
				</div>
		        {{/each}}  	
			</div>
		</div>
	</div>
</div>	
{{/each}}
{{/if}} 

